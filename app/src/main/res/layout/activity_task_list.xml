<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mission_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_common_2"
    android:orientation="vertical"
    tools:context="com.yihai.caotang.ui.task.TaskListActivity">

    <com.yihai.caotang.widgets.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_content_scroller"
        android:orientation="vertical"
        android:paddingBottom="33dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="33dp">

        <com.yihai.caotang.widgets.NoGlowRecyclerView
            android:id="@+id/ultimate_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideInset"
            android:scrollbarTrackVertical="@drawable/scroll_bar_normal"
            android:scrollbarThumbVertical="@drawable/scroll_bar_pressed"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:recyclerviewClipToPadding="true"
            app:recyclerviewScrollbars="vertical" />
    </LinearLayout>
</LinearLayout>
