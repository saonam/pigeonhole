<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_common_2"
    tools:context="com.yihai.caotang.ui.manage.SplashInitFragment">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <com.yihai.caotang.widgets.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:text="初  始  化  中  ...  ..."
            android:textColor="@color/textColorPrimary"
            android:textSize="22sp" />

        <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            app:zpb_bg_color="@color/progressBarBackground"
            app:zpb_max="100"
            app:zpb_padding="2dp"
            app:zpb_pb_color="@color/progressBarProgress" />
    </LinearLayout>

</RelativeLayout>
